{
    "name": "@akiwiki/markdown-editor",
    "version": "1.1.2",
    "description": "A customizable, TypeScript-based React markdown editor with sanitization",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "type": "module",
    "scripts": {
        "build": "rollup -c",
        "lint": "eslint src",
        "type-check": "npx tsc --noEmit",
        "prepublishOnly": "npm run build && npm test",
        "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
        "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
        "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage"
    },
    "keywords": [
        "markdown",
        "editor",
        "react",
        "typescript",
        "sanitize",
        "preview"
    ],
    "author": "Aki W.",
    "license": "MIT",
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "@types/react-syntax-highlighter": "^15.5.13",
        "katex": "^0.16.28",
        "react-markdown": "^10.1.0",
        "react-syntax-highlighter": "^16.1.0",
        "rehype-katex": "^7.0.1",
        "rehype-raw": "^7.0.0",
        "rehype-sanitize": "^6.0.0",
        "remark-directive": "^4.0.0",
        "remark-gfm": "^4.0.1",
        "remark-math": "^6.0.0",
        "unist-util-visit": "^5.1.0"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-typescript": "^12.3.0",
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^16.3.2",
        "@types/jest": "^30.0.0",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "postcss": "^8.5.6",
        "rollup": "^4.57.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.2",
        "ts-jest": "^29.4.6",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/akkarachaiwangcharoensap/markdown-editor.git"
    },
    "homepage": "https://github.com/akkarachaiwangcharoensap/markdown-editor#readme",
    "bugs": {
        "url": "https://github.com/akkarachaiwangcharoensap/markdown-editor/issues"
    }
}
